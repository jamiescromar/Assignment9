@model Assignment9.Models.Movie
<form method="post" asp-action="EditMovie">
    <!--Create Input for Category: It will be a dropdown-->
    <label asp-for="Category">Category</label>
    <select asp-for="Category" id="Category">
        <option value="">Select One</option>
        <option value="Action/Adventure">Action/Adventure</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Horror/Suspense">Horror/Suspense</option>
        <option value="Miscellaneous">Miscellaneous</option>
        <option value="Television">Television</option>
        <option value="VHS">VHS</option>
    </select><br />

    <!--Create Input for Title-->
    <label asp-for="Title">Title</label>
    <input asp-for="Title" id="Title" /><br />

    <!--Create Input for Year-->
    <label asp-for="Year">Year</label>
    <input asp-for="Year" id="Year" /><br />

    <!--Create Input for Director-->
    <label asp-for="Director">Director</label>
    <input asp-for="Director" id="Director" /><br />

    <!--Create Input for Rating: This will be a dropdown-->
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating" id="Rating">
        <option value="">Select One</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NR">NR</option>
        <option value="UR">UR</option>
        <option value="TV-Y7">TV-Y7</option>
        <option value="TV-PG">TV-PG</option>
        <option value="TV-14">TV-14</option>
    </select><br />

    <!--Create Input for Edited: This will be a drop down boolean-->
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited" id="Edited">
        <option value="">Select One</option>
        <option value="True">True</option>
        <option value="False">False</option>
    </select><br />

    <!--Create Input for Lent To-->
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" id="LentTo" /><br />

    <!--Create Input for Notes-->
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" id="Notes" /><br />
    <input asp-for="MovieId" hidden />
    <!--This button will be sumbitted to the model and make it better-->
    <button type="submit">Submit Your Application</button>
</form>